  "description": "Um projeto para treinar progamação",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && next dev",
    "services:up": "docker compose -f config/docker-compose.dev.yaml up -d",
    "services:down": "docker compose -f config/docker-compose.dev.yaml down",
    "services:stop": "docker compose -f config/docker-compose.dev.yaml stop",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.3",
    "next": "^13.1.6",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^30.2.0",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^30.2.0",
    "node-fetch": "^2.6.7",
    "node-mocks-http": "^1.17.2",
